<Window x:Class="SandcastleBuilder.PlugIns.UI.AttributeRendererConfigDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SandcastleBuilder.PlugIns.UI"
        xmlns:plugIns="clr-namespace:SandcastleBuilder.PlugIns;assembly=SandcastleBuilder.PlugIns"
        d:DataContext="{d:DesignInstance plugIns:AttributeRendererPlugin}"
        mc:Ignorable="d" Width="800" Height="500" MinWidth="500" MinHeight="300" ShowInTaskbar="False"
				Title="Configure XPath Reflection File Filter Plug-In" ResizeMode="CanResizeWithGrip"
				WindowStartupLocation="CenterScreen" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
				FocusManager.FocusedElement="{Binding ElementName=lbAttributeRenderEntries}">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="3*"/>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="2*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Content="_Attribute Render Entries" Margin="3,0"
			Target="{Binding ElementName=lbAttributeRenderEntries}" />
		<ListBox Grid.Row="1" Name="lbAttributeRenderEntries" Margin="3" SelectionChanged="lbXPathQueries_SelectionChanged"
		         ItemsSource="{Binding AttributeRepresentationEntries}">
			<ListBox.ItemTemplate>
				<DataTemplate DataType="{x:Type plugIns:AttributeRepresentationEntry}">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<TextBlock Grid.Row="0" Text="{Binding Path=AttributeClassName}" />
						<TextBlock Grid.Row="1" Text="{Binding Path=ErrorMessage}"
							Background="Firebrick" Foreground="White">
							<TextBlock.Style>
								<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
									<Style.Triggers>
										<Trigger Property="TextBlock.Text" Value="">
											<Setter Property="Visibility" Value="Collapsed"/>
										</Trigger>
									</Style.Triggers>
								</Style>
							</TextBlock.Style>
						</TextBlock>
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Name="btnAdd" Margin="3" Padding="3" MinWidth="80" Content="_Add" Click="btnAdd_Click"
				ToolTip="Add a new XPath query"/>
			<Button Name="btnDelete" Margin="3" Padding="3" MinWidth="80" Content="_Delete" Click="btnDelete_Click"
				ToolTip="Delete the selected XPath query" />
		</StackPanel>
		<Label Grid.Row="3" Content="_Edit AttributeRepresentation" Margin="3,0"
			Target="{Binding ElementName=txtExpression}" />
		
		<Grid Grid.Row="4" x:Name="GridItemContent" DataContext="{Binding ElementName=lbAttributeRenderEntries, Path=SelectedItem}"
		      d:DataContext="{d:DesignInstance plugIns:AttributeRepresentationEntry}">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			
			<Label Grid.Row="0"
			       Grid.Column="0"
			       Content="Attribute Name:" />
			<Label Grid.Row="1"
			       Grid.Column="0"
			       Content="Short Representation:" />
			<Label Grid.Row="2"
			       Grid.Column="0"
			       Content="Long Representation:" />
			
			<TextBox Grid.Row="0"
			       Grid.Column="1"
			       x:Name="txtAttributeName"
			       Text="{Binding AttributeClassName, Mode=TwoWay}" />
			<TextBox Grid.Row="1"
			         Grid.Column="1"
			         x:Name="txtShortRepresentation"
			         AcceptsReturn="True"
			         Text="{Binding ShortRepresentation, Mode=TwoWay}" />
			<TextBox Grid.Row="2"
			         Grid.Column="1"
			         x:Name="txtLongRepresentation"
			         AcceptsReturn="True"
			         Text="{Binding LongRepresentation, Mode=TwoWay}" />
		</Grid>
		
			<!-- <TextBox Grid.Row="4" Name="txtExpression" AcceptsReturn="True" Margin="3" TextWrapping="Wrap" -->
			<!--          VerticalScrollBarVisibility="Visible" -->
			<!--          Text="{Binding ElementName=lbAttributeRenderEntries, Path=SelectedItem.Expression, Mode=TwoWay}"/> -->
		<Grid Grid.Row="5" Margin="3,3,3,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Name="btnOK" Margin="3" Padding="3" MinWidth="80" Content="OK" Click="btnOK_Click"
				HorizontalAlignment="Left" ToolTip="Save settings"/>
			<TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Hyperlink Name="lnkProjectSite" NavigateUri="https://GitHub.com/EWSoftware/SHFB"
          RequestNavigate="lnkProjectSite_RequestNavigate"  ToolTip="https://GitHub.com/EWSoftware/SHFB">Sandcastle
Help File Builder</Hyperlink>
			</TextBlock>
			<Button Grid.Column="2" Name="btnHelp" Margin="0,3,3,3" Padding="3" MinWidth="80" Content="Help"
				Click="btnHelp_Click"  ToolTip="View help for this component" />
			<Button Grid.Column="3" Name="btnCancel" Margin="3" Padding="3" MinWidth="80" Content="Cancel"
        HorizontalAlignment="Right" IsCancel="True" ToolTip="Cancel without saving changes" />
		</Grid>
	</Grid>
</Window>
