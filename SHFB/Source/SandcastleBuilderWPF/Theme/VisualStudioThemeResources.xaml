	<Style x:Key="ThemedDataGridRowHeaderStyle" TargetType="{x:Type DataGridRowHeader}">
		<Setter Property="Background" Value="{StaticResource ButtonBackgroundBrushKey}" />
		<Setter Property="Template">
			<Setter.Value>
