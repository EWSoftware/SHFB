<Window x:Class="SandcastleBuilder.WPF.UI.ConvertTopicsDlg"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" ResizeMode="NoResize"
	Title="Convert MAML Topics to Markdown" MaxWidth="425" Height="280" SizeToContent="Height"
  WindowStartupLocation="CenterScreen" ShowInTaskbar="False"
  Icon="/SandcastleBuilder.WPF;component/Resources/PageEdit.png"
	FocusManager.FocusedElement="{Binding ElementName=chkSkipGlossaryTopics}">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0">
			<CheckBox Name="chkUseFilenames" Margin="0,5,0,0">
				<TextBlock TextWrapping="Wrap">Use filenames for unique IDs rather than the existing topic IDs.  Leave
unchecked to keep using existing topic IDs (usually GUIDs) for help output filenames to maintain links to
existing topics in previously published content.</TextBlock>
			</CheckBox>
			<TextBlock Margin="0,10,0,5" Text="Topics to convert:" />
			<StackPanel Margin="20,0,0,0">
				<RadioButton Name="rbSelectedTopicOnly" IsChecked="True" Margin="0,5,0,0"
						Content="Only the _selected topic" />
				<RadioButton Name="rbSelectedTopicAndChildren" Margin="0,5,0,0"
						Content="Only the _selected topic and its children recursively" />
				<RadioButton Name="rbSelectedTopicAndSiblings" Margin="0,5,0,0"
						Content="The selected topic and its _siblings (no sub-topics)" />
				<RadioButton Name="rbAllTopics" Margin="0,5,0,0" Content="All topics" />
			</StackPanel>
		</StackPanel>
		<Grid Grid.Row="2" Margin="0,15,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Name="btnOK" Padding="3" MinWidth="80" Content="OK" HorizontalAlignment="Left"
          IsDefault="True" Click="btnOK_Click" />
			<Button Grid.Column="1" Name="btnHelp" Padding="3" MinWidth="80" Content="Help" HorizontalAlignment="Right"
          Margin="0,0,10,0" Click="btnHelp_Click" />
			<Button Grid.Column="2" Name="btnCancel" Padding="3" MinWidth="80" Content="Cancel" HorizontalAlignment="Right"
          IsCancel="True" />
		</Grid>
	</Grid>
</Window>
