<sci:BasePage x:Class="Sandcastle.Installer.InstallerPages.CompletionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sci="clr-namespace:Sandcastle.Installer.InstallerPages"
             mc:Ignorable="d" 
             d:DesignHeight="325" d:DesignWidth="500">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <FlowDocumentScrollViewer Grid.Row="0">
      <FlowDocument FontFamily="Verdana" FontSize="11" PagePadding="10,15" TextAlignment="Left">
        <Paragraph><Bold FontSize="16">Guided Installation Completed</Bold></Paragraph>

        <Paragraph>The guided installation has been completed.  See below for a list of additional actions
that you can take.  Click the <Bold>Close</Bold> button to exit.</Paragraph>

      </FlowDocument>
    </FlowDocumentScrollViewer>
    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
      CanContentScroll="False">
      <StackPanel Grid.Row="1" Name="pnlActions" />
    </ScrollViewer>
  </Grid>
</sci:BasePage>
